@model Employee;

@{
    ViewData["Title"] = "Update";
}

<div>
    <form action="#" method="post" enctype="multipart/form-data">
        Name:<br />
        <input type="text" class="form-control" value="@Model.Name" name="Name" /><br />
        Email:<br />
        <input type="email" class="form-control" value="@Model.Email" name="email" /><br />
        Phone:<br />
        <input type="number" class="form-control" name="Phone" value="@Model.Phone" /><br />
        Address:<br /><textarea rows="4" cols="12" name="Address" class="form-control" >@Model.Address</textarea><br />
        Image:<br /><input type="file" class="form-control" name="Image" /><br />
        <img src="~/@Model.Image" width="100" height="100" />
        <input type="submit" class=" btn btn-success" value="Record Updated" />&nbsp; &nbsp;&nbsp;
        <input type="reset" class=" btn btn-danger" value="Clear" />
    </form>
</div>